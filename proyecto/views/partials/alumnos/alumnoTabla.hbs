{{#if alumno}}
<table class="table table-bordered table-hover table-dark">
    <thead>
        <tr>
            <th>Num.</th>
            <th>Nombre</th>
            <th>Apaterno</th>
            <th>Amaterno</th>
            <th>FechaNacimiento</th>
            <th>Sexo</th>
            <th>Celular</th>
            <th>Direcci√≥n</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each alumno}}
        <tr>
            <td>{{@index}}</td>
            <td>{{nombre}}</td>
            <td>{{paterno}}</td>
            <td>{{materno}}</td>
            <td>{{fechaNac}}</td>
            <td>{{sexo}}</td>
            <td>{{telefono}}</td>
            <td>{{direccion}}</td>
            <td>
                {{#if opcion}}
                 <a href="/status/{{_id}}" class="btn btn-warning">No disponible</a>
                 {{else}}
                 <a href="/status/{{_id}}" class="btn btn-success">Disponible</a>
                 {{/if}}
                 <a href="/update/{{_id}}" class="btn btn-info">Editar</a>
                 <a href="/delete/{{_id}}" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{else}}
<div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
    <h1>No hay alumnos</h1>
    <img src="/icons/subiendo.png" class="w-75">
</div>
</div>
{{/if}}

 
    
   